
{
  "manifest_version": 3,
  "name": "Help Me Out",
  "description": "This extension helps you record and share help videos with ease.",
  "version": "1.0",
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "Background.jsx"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      
      "128": "icon.png"
    }
  },
  "host_permissions": ["http://*/*", "https://*/*", "*://*/*"],

  "permissions": ["scripting", "tabs", "activeTab"]
}